@model IEnumerable<TestBleems.Models.Product>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products List</h1>
 
<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary float-right " data-toggle="ajax-modal" data-target="#add-contact" data-url="@Url.Action("Contact")">
	Add Product
</button>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Product ID</th>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in ViewBag.productList)
		{
			<tr>
				<th scope="row">@item["productId"]</th>
				<td>@item["productName"]</td>
				<td>@item["price"]</td>
				<td>@item["descriptions"]</td>
				<td>@item["descriptions"]</td>
			</tr>
		}
	</tbody>
</table>


<div class="modal fade" tabindex="-1" id="loginModal"
	 data-keyboard="false" data-backdrop="static">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Add Product</h4>
				<button type="button" class="close" data-dismiss="modal">
					×
				</button>
			</div>
			<div class="modal-body">
				
					<div class="form-group">
						<input class="form-control" type="text" required ="required"
							   placeholder="Product Name" id="inputProductName" />
					</div>
					<div class="form-group">
						<input class="form-control" placeholder="eg: 10.500" required="required"
							   type="number" id="inputPrice" />
					</div>
					<div class="form-group">
						<textarea id="inputDescription" class="form-control" placeholder="Enter the descriptions" ></textarea>

					</div>
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary button button4" id="saveProduct">Add</button>
				
			</div>
		</div>
	</div>
</div> 